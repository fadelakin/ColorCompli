<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
    android:background="#3498db">

    <TextView
        android:text="@string/compliment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="#ecf0f1"
        android:textStyle="bold"
        android:layout_marginTop="69dp"
        android:id="@+id/titleTextView"
        android:layout_below="@+id/getHelpButton"
        android:layout_alignLeft="@+id/colorEditText"
        android:layout_alignStart="@+id/colorEditText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_compliments"
        android:id="@+id/getComplimentsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#3498db"
        android:background="#ecf0f1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorEditText"
        android:layout_above="@+id/getComplimentsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/favorite_color"
        android:textColorHint="#ffecf0f1"
        android:textColor="#ffecf0f1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:id="@+id/getHelpButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ecf0f1"
        android:background="#3498db"
        android:textSize="20sp"/>

</RelativeLayout>
